{
  "velociraptor":{
    "scripts": {
      "start":"deno run --unstable --watch --allow-read --allow-net app/mod.ts",
      "build":"deno run --allow-read --allow-run=git --allow-write=app/build/cache,app/server/api/maps/data.json app/build/mod.ts",
      "test":"deno test --allow-read app/tests",
      "bundle": "deno bundle app/client/js/app/mod.ts app/client/js/app.js"
    }
  },
  "lint": {
    "files": {
      "include": ["app/"],
      "exclude": ["app/build/cache/"]
    },
    "rules": {
      "exclude": ["require-await", "no-async-promise-executor"]
    }
  },
  "fmt": {
    "files": {
      "include": ["app/"],
      "exclude": ["app/build/cache/", "app/server/maps/data.json"]
    },
    "options": {
      "lineWidth": 200
    }
  }
}