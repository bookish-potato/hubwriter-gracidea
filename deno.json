{
  "velociraptor":{
    "scripts": {
      "start":"deno run --unstable --watch --allow-read --allow-net app/mod.ts",
      "build":"deno run --allow-read --allow-net --allow-run=git --allow-write=app/build/cache,app/generated app/build/mod.ts",
      "test":"deno test --allow-read app/tests",
      "bundle": "deno bundle app/client/js/app/mod.ts app/generated/js/app.js",
      "fmt": "deno fmt --config deno.json",
      "lint": "deno lint --config deno.json"
    }
  },
  "lint": {
    "files": {
      "include": ["app/"],
      "exclude": ["app/build/cache/", "app/generated/"]
    },
    "rules": {
      "exclude": ["require-await", "no-async-promise-executor"]
    }
  },
  "fmt": {
    "files": {
      "include": ["app/"],
      "exclude": ["app/build/cache/", "app/generated/"]
    },
    "options": {
      "lineWidth": 200
    }
  }
}